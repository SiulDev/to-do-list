---
import Layout from "../layouts/Layout.astro";
---

<Layout tittle="To-do-list-pro">
  <main class="min-h-screen flex items-center justify-center bg-slate-900 p-6">
    <div class="w-full max-w-md">
      <h1 class="text-3xl font-bold text-white mb-6 text-center">Mis Tareas</h1>

      <div class="flex items-center gap-3 bg-slate-800/80 backdrop-blur-sm rounded-2xl p-4 shadow-lg">
        <input
          type="text"
          id="inputNuevaTarea"
          class="flex-1 bg-transparent text-white placeholder-gray-400 border border-transparent focus:border-indigo-500 rounded-lg px-4 py-2 outline-none"
          placeholder="¿Qué harás hoy?"
        />
        <button id="btnAgregar" class="bg-indigo-600 hover:bg-indigo-500 text-white rounded-lg px-4 py-2 font-medium"
          >Crear</button
        >
      </div>

      <ul id="listaTareas" class="mt-6 w-full space-y-3 text-white"></ul>
    </div>

    <script>
      import "../scripts/todoLogic.js";
    </script>
  </main>
</Layout>
