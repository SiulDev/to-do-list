---
import Layout from "../layouts/Layout.astro";
---

<Layout tittle="TodoList">
  <h1 class="text-3xl font-bold text-secondary mb-6 text-center">Mis Tareas</h1>
  <div class="flex justify-between">
    <input
      type="text"
      id="inputNuevaTarea"
      class="w-[70%] p-2.5 rounded-standard border-2 border-gray-300 outline-none focus:border-primary text-dark-text placeholder-gray-500"
      placeholder="¿Qué harás hoy?"
    />

    <button
      id="btnAgregar"
      class="px-4 py-2 bg-primary hover:opacity-90 text-dark rounded-lg font-bold border-none cursor-pointer duration-150"
      >Crear</button
    >
  </div>

  <ul id="listaTareas" class="list-none pt-6"></ul>

  <script>
    import "../scripts/todoLogic.js";
  </script>
</Layout>
